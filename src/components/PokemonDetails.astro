---
export interface Props {
	name: string;
	type: string[];
	stats: [string|number];
	image: string;
};

const { name, type, stats, image } = Astro.props as Props;

const url = 'https://raw.githubusercontent.com/jherr/pokemon/main/';


---
<div class="details">
      <div class="image">
		<img src=`${url}${image}` alt=`My name is ${name}. I'm a Pokemon.`>
	</div>


	<div class="data">
		<h1>{name}</h1>
		{
			type.map(t => <span>| {t}</span>)
		}

	    <h3>Stats</h3>
		<table>
			<tr>
				<th>Name</th>
				<th>Value</th>
			</tr>
			{
				stats.map(s => 
					<tr>
						<td>{s.name}</td>
						<td>{s.value}</td>
					</tr>
				)
			}
		</table>
	</div>
</div>

<style >
  .details {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: auto;
		gap: 2rem;
   }

   .image {
	   max-width: 20rem;
	   height: 20rem;
   }
   img {
	   max-width: 100%;
   }

   span {
	   margin-right: 0.5rem;
	   font-weight: 300;
	   color: #636363;
   }
</style>

